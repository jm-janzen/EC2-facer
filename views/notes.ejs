<% include sections/head %>

<% include sections/navbar %>

<div class="hero-unit">
    <div class='page-header'>
        <h1> <%= subject %> </h1>
    </div>
    <div class='body' style='overflow:hidden;'>
        <div id='note-container' style='width:80%;float:right;opacity:1;background-color:darkgreen;'>
            // note text goes here
        </div>
        <div style='width:20%;float:right;'>
        <% var i = 0;
        for (note in notes) { %>
            <a id='<%=titles[i]%>'><%= note %></a> <br/>
        <% i++
        } %>
        </div>
    </div>
</div>

<script type='text/javascript'>

$('a').click(function (event) {
    var which = $(this)
      .attr('id');
    console.log(which);
    $.ajax({
        url: '/notes/' + which,
        complete: function (result) {
            result = JSON.stringify(result.responseText)
              .replace(/\\n/g, '<br/>')
              .replace(/\\t/g, '&nbsp;&nbsp;&nbsp;&nbsp;')
              .slice(1, -1);
            $('div#note-container')
              .html(result);
        }
    });
});

</script>

